{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "overrides": [
    // Only uses Testing Library lint rules in test files
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ]
    }
  ],
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}